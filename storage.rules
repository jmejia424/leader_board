rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && request.auth.token.admin == true;
    }
    
    // Score submissions folder - users can upload images
    match /score_submissions/{imageId} {
      // Allow authenticated users to create (upload) images
      // Image filename must be a valid UUID format (will be validated client-side)
      allow create: if isAuthenticated()
        && request.resource.size < 10 * 1024 * 1024  // Max 10MB
        && request.resource.contentType.matches('image/.*');  // Must be an image
      
      // Cloud Functions can read and delete images (using Admin SDK)
      // Users cannot read or delete - only Cloud Functions handle this
      allow read, update, delete: if false;
      
      // Admins can read all images
      allow read: if isAdmin();
    }
    
    // Images for pinball machines (existing functionality)
    match /images/pinballs/{allPaths=**} {
      allow read: if true;  // Public read access for pinball images
      allow write: if isAdmin();  // Only admins can upload pinball images
    }
    
    // Default deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
